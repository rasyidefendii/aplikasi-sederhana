<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/email"
        android:layout_below="@id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EMAIL"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_centerVertical="true"
        android:layout_marginTop="9dp"
        android:text="PASSWORD"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="55dp"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/stringlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="STRING 1"
        tools:layout_editor_absoluteX="210dp"
        tools:layout_editor_absoluteY="332dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/intlogin"
        android:layout_below="@id/stringlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INT LOGIN"
        tools:layout_editor_absoluteX="208dp"
        tools:layout_editor_absoluteY="401dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/intarray1"
        android:layout_below="@id/intlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INT 1"
        tools:layout_editor_absoluteX="224dp"
        tools:layout_editor_absoluteY="463dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/intarray2"
        android:layout_below="@id/intarray1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INT 2"
        tools:layout_editor_absoluteX="224dp"
        tools:layout_editor_absoluteY="528dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/charlogin"
        android:layout_below="@id/intarray2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHAR LOGIN"
        tools:layout_editor_absoluteX="200dp"
        tools:layout_editor_absoluteY="604dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/back"
        android:layout_below="@id/charlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEKAN"
        tools:layout_editor_absoluteX="195dp"
        tools:layout_editor_absoluteY="705dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="20sp"/>

</RelativeLayout>